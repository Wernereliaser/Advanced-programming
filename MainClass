//Template class
template <class T> class ClassTemplate  {
public:
    Customer customer;
    T fees;

    ClassTemplate(T monthlyFee) {
        fees = monthlyFee;
    }

    //template function
    template <class T>
    double  calculateFee(T days, T price) {
        days = customer.numberOfDays;
        price = customer.price;

        fees = days * price;
        cout << "Your monthly fee is: N$" << fees << endl;

        return fees;
    }
};


